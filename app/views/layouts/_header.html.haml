%header
  %nav.navbar.navbar-default{role:"navigation"}
    .navbar-header
      %button.navbar-toggle{type:"button", data:{toggle:"collapse", target:"#bs-example-navbar-collapse-1"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Reservester', root_path, class: 'navbar-brand'

    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right
        - if owner_signed_in?
          %li= link_to 'restaurants', restaurants_path
          %li= link_to 'add a restaurant', new_restaurant_path
          %li.dropdown
            = link_to current_owner.name, '#', class: 'dropdown-toggle', data:{toggle:'dropdown'}
            %ul.dropdown-menu
              %li= link_to 'settings', '#'
              %li= link_to 'log out', destroy_owner_session_path(owner_session), method: :delete
        - else
          %li= link_to 'login', new_owner_session_path
