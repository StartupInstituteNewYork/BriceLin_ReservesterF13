<h1><%= @restaurant.name %></h1>

<article>
	<header>
		<p><%= @restaurant.description %></p>
	</header>
	<div>
		<p><%= image_tag @restaurant.image_url(:masthead) %></p>
		<h5>Address</h5>
		<p><%= @restaurant.address %></p>
		<h5>Phone</h5>
		<p><%= @restaurant.phone_number %></p>
		<p><%= image_tag "http://maps.google.com/maps/api/staticmap?visual_refresh=true&size=450x300&sensor=false&zoom=16&markers=#{@restaurant.address}" %></p>
	</div>
	<p>
		<%= link_to 'edit', edit_restaurant_path(@restaurant) %> |
		<%= link_to 'delete', @restaurant, method: :delete, data: { confirm: 'Are you sure you want to delete this pipe?' } %> |
		<%= link_to 'back', root_path %>
	</p>
</article>